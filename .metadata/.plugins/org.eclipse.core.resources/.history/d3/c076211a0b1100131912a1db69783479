package com.scottcaruso.interfacefragments;

import com.scottcaruso.mygov.R;

import android.app.Fragment;
import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.Button;
import android.widget.LinearLayout;
import android.widget.Spinner;
import android.widget.TextView;

public class DisplayResultsFragment extends Fragment {

	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container, Bundle savedInstanceState)
	{
		super.onCreateView(inflater, container, savedInstanceState);
		LinearLayout view = (LinearLayout) inflater.inflate(R.layout.politician_display, container);
		
		//Assigns the elements used in the view.
		final Spinner polName = (Spinner) getActivity().findViewById(com.scottcaruso.mygov.R.id.politicianName);
		TextView polParty = (TextView) getActivity().findViewById(com.scottcaruso.mygov.R.id.partytext);
		TextView polState = (TextView) a.findViewById(com.scottcaruso.mygov.R.id.statetext);
		TextView polTerm = (TextView) a.findViewById(com.scottcaruso.mygov.R.id.termText);
		TextView polTwitter = (TextView) a.findViewById(com.scottcaruso.mygov.R.id.twitterText);
		TextView polWebsite = (Button) a.findViewById(com.scottcaruso.mygov.R.id.websiteText);
		
		
		return view;
	}
}
